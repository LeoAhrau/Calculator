<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tv_result"
        android:layout_width="231dp"
        android:layout_height="71dp"
        android:layout_marginBottom="652dp"
        android:hint="@string/result"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.022"
        app:layout_constraintStart_toStartOf="parent" />


    <EditText
        android:id="@+id/et_x"
        android:layout_width="126dp"
        android:layout_height="65dp"
        android:layout_marginTop="92dp"
        android:hint="@string/input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_y"
        android:layout_width="119dp"
        android:layout_height="72dp"
        android:layout_marginTop="84dp"
        android:hint="@string/input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/phytagoras_btn"
        android:layout_width="111dp"
        android:layout_height="59dp"
        android:layout_marginTop="156dp"
        android:layout_marginBottom="154dp"
        android:text="@string/phytagoras"
        app:layout_constraintBottom_toTopOf="@+id/subtraction_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.214" />

    <Button
        android:id="@+id/cylinder_btn"
        android:layout_width="104dp"
        android:layout_height="53dp"
        android:layout_marginTop="408dp"
        android:text="@string/cylinder_volume"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addition_btn"
        android:layout_width="109dp"
        android:layout_height="61dp"
        android:layout_marginTop="220dp"
        android:text="@string/addition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.993"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button

        android:id="@+id/division_btn"
        android:layout_width="103dp"
        android:layout_height="53dp"
        android:layout_marginTop="460dp"
        android:text="@string/division"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/multiply_btn"
        android:layout_width="110dp"
        android:layout_height="58dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="47dp"
        android:text="Multiply"
        app:layout_constraintBottom_toBottomOf="@+id/subtraction_btn"
        app:layout_constraintEnd_toEndOf="@+id/subtraction_btn"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="@+id/addition_btn"
        app:layout_constraintTop_toTopOf="@+id/addition_btn"
        app:layout_constraintVertical_bias="0.111" />

    <Button
        android:id="@+id/subtraction_btn"
        android:layout_width="107dp"
        android:layout_height="62dp"
        android:text="Subtraction"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.505" />


    <Button
        android:id="@+id/circle_btn"
        android:layout_width="103dp"
        android:layout_height="53dp"
        android:layout_marginTop="310dp"
        android:text="@string/circle_area"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>